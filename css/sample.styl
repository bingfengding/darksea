*
  margin 0
  padding 0
  box-sizing border-box
  font-family "Microsoft YaHei",Arial,Helvetica,sans-serif,"宋体"
body

  color #363636
  background url("../images/3.jpg") no-repeat
  background-size 100% auto
  overflow scroll
  overflow-y hidden

img
  border 0
ul li
  list-style: none
a
  text-decoration none
  color #363636
i
  font-style normal
#sample
  position relative
  ul
    li
      display inline-block
      position relative
      top 0
      left 0
      background-color rgb(0,0,0)
      a
        display inline-block
        width 100%
        height 100%
        vertical-align middle
        overflow hidden

        div
          width 100%
          height 100%
          padding-left 10%
          position relative
          top 100%
          background-color rgba(0,0,0,0.3)
          color bisque
      a.zto
        background url("../images/zto.png") no-repeat
        background-size 95%
        background-position 100% 20%
      a.zhihu
        background url("../images/zhihu.png") no-repeat
        background-size 95%
        background-position 100% 20%
      a.formula
        background url("../images/formula.png") no-repeat
        background-size 95%
        background-position 100% 20%

#sample:after
  content ""
  clear both
  display table
